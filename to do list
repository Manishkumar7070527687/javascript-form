    <ul id="my"> </ul>

    <script>
        function clickme(){
        let x=document.getElementById("my")

            if(box.value==""){
                alert("Please enter anything");
            }
            let add=document.createElement("li")
            add.textContent=box.value;
            x.appendChild(add);
        }
